  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--詳細画面-->
<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <div class="form-group">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <p>Opinion</p>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Update Book' %>
<% end %>

<!--詳細画面のリンク -->
<%= link_to "show", book_path(@book.id) %>
