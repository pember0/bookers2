<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- FontAwesomeの導入、～fontawesome.com/の後ろは自身のKitCodeのIDが入ります  -->
    <script src="https://kit.fontawesome.com/3643740517.js" crossorigin="anonymous"></script>
    <!-- stylesheet_pack_tagの場合は、app/javascript 配下のファイルを参照する -->
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <!-- ログイン状態の場合 -->
              <% if user_signed_in? %>

                <!-- Bookersのリンク -->
                <li class="nav-item text-left">
                  <%= link_to "Bookers", root_path, class: "navbar-brand" %>
                </li>

                <!-- Homeのリンク -->
                <li class="nav-link text-light">
                  <%= link_to "Home", user_path(current_user.id) %>
                </li>

                <!-- Usersのリンク -->
                <li class="nav-item text-light">
                  <%= link_to "Users", users_path %>
                </li>

                <!-- Booksのリンク -->
                <li class="nav-item text-light">
                  <%= link_to "Books", books_path %>
                </li>

                <!-- Log outのリンク -->
                <li class="nav-item text-light">
                  <%= link_to "Log out", destroy_user_session_path, method: :delete %>
                </li>

              <!-- ログイン前の状態の場合 -->
              <% else %>
                <!-- Bookersのリンク -->
                <li class="nav-item text-left">
                  <%= link_to "Bookers", root_path %>
                </li>

                <!-- Homeのリンク -->
                <li class="nav-item text-light">
                  <%= link_to "Home", root_path %>
                </li>

                <!-- Aboutのリンク -->
                <li class="nav-item">
                  <%= link_to "About", about_path %>
                </li>

                <!-- Sign upのリンク -->
                <li class="nav-item text-light">
                  <%= link_to "Sign up", new_user_registration_path %>
                </li>

                <!-- Log inのリンク -->
                <li class="nav-item text-light">
                  <%= link_to "Log in", new_user_session_path %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

  <main>
    <%= yield %>
  </main>
    <!-- フッター設定 -->
    <footer class="text-black mt-5">
      <div class= "row" >
        <div class= mx-auto>
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>
  </body>
</html>
