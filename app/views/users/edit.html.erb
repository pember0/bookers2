<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>User info</h2>

<%= form_with model: @user do |f| %>
    <!-- User info -->
    <div class="form-group">
        <label for="user_name">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName" %>
    </div>

    <!-- Image -->
    <div class="form-group">
        <label for="inputImage">ProfileImage</label>
        <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
    </div>

    <!-- Introduction -->
    <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction, autofocus: true, id:"inputName" %>
        </div>
    </div>

    <!-- Update Userボタン  -->
    <%= f.submit "Update User" %>
    <!--
    <div class="form-group">
        <a class="btn btn-secondary" data-disable-with="Update User">Update User</a>
    </div>
    -->

<% end %>